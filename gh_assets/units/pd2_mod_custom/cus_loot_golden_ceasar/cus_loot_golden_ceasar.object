	<bodies>
		<body enabled="true" template="static" name="body_pillow" >	
            <object collision_type="box" name="c_pillow" padding="-2.5"/>
		</body>
		<body enabled="true" template="static" name="body_bust" >	
            <object collision_type="convex" name="c_bust" padding="-2.5"/>
